IDIR = ./include
SRCDIR = ./src

CC = g++
AR = ar
LD = ld

RAPIDJSON = ./lib/rapidjson/include
RAPIDJSON_LIC = $(RAPIDJSON)/../license.txt

NAME = libmnrl
SNAME = $(NAME).a
DNAME = $(NAME).so

CXXFLAGS = -Wconversion -Wall -Werror -Wextra -pedantic 
CXXFLAGS += -I$(IDIR) -I $(RAPIDJSON) --std=c++11 -fPIC
LDFLAGS = -L.
ARFLAGS = rcs

_DEPS = *.hpp
_OBJ_MNRL = mnrl.o MNRLNetwork.o MNRLDefs.o

ODIR = $(SRCDIR)/obj
DEPS = $(patsubst %,$(IDIR)/%,$(_DEPS))
OBJ_VALIDATE = $(patsubst %,$(ODIR)/%,$(_OBJ_VALIDATE))
OBJ_MNRL = $(patsubst %,$(ODIR)/%,$(_OBJ_MNRL))

MNRL_HPP = $(IDIR)/mnrl_schema_json.hpp

###########
# Testing
TESTDIR = tests
TESTLDFLAGS = -lmnrl
###########

all: release
	
release: CXXFLAGS += -O3
release: libmnrl

debug: CXXFLAGS += -g3
debug: libmnrl

libmnrl: $(RAPIDJSON_LIC) $(SNAME) $(DNAME)

$(DNAME): LDFLAGS += -shared
$(DNAME): $(OBJ_MNRL)
	$(CC) $(LDFLAGS) $^ -o $@

$(SNAME): $(OBJ_MNRL)
	$(AR) $(ARFLAGS) $@ $^ 

$(ODIR)/%.o: $(SRCDIR)/%.cpp $(DEPS) mnrl_hpp
	@pwd
	@mkdir -p $(ODIR)
	$(CC) $(CXXFLAGS) -c -o $@ $<

mnrl_hpp: 
	@echo "// This file is autogenerated by Makefile. Do not edit." > $(MNRL_HPP)
	xxd -i ../mnrl-schema.json >> $(MNRL_HPP)

$(RAPIDJSON_LIC):
	git submodule init
	git submodule update	

test: tests 
	../tests/readwrite_test.sh tests/readwrite tests/

tests: libmnrl $(TESTDIR)/readwrite $(TESTDIR)/readandprint

$(TESTDIR)/readwrite: $(TESTDIR)/readwrite.cpp
	$(CC) $(CXXFLAGS) $(LDFLAGS) $< $(TESTLDFLAGS) -o $@ 

$(TESTDIR)/readandprint: $(TESTDIR)/readandprint.cpp
	$(CC) -g3 $(CXXFLAGS) $(LDFLAGS) $< $(TESTLDFLAGS) -o $@

.PHONY: all release debug test clean mnrl_hpp

clean:
	rm -f $(ODIR)/*.o $(SNAME) $(DNAME) $(MNRL_HPP) tests/readwrite tests/readandprint
	rmdir $(ODIR)
